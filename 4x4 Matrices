#include <iostream>
using namespace std;

int main() {
    int matrix1[4][4], matrix2[4][4], sumOfMatrices[4][4];

    cout << "Enter elements for Matrix 1 (4x4):" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cin >> matrix1[i][j];
        }
    }

    cout << "Enter elements for Matrix 2 (4x4):" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cin >> matrix2[i][j];
        }
    }

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            sumOfMatrices[i][j] = matrix1[i][j] + matrix2[i][j];
        }
    }

    cout << "Matrix 1:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << matrix1[i][j] << " ";
        }
        cout << endl;
    }

    cout << "Matrix 2:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << matrix2[i][j] << " ";
        }
        cout << endl;
    }

    cout << "Sum of Matrices:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << sumOfMatrices[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
